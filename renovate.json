{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeMinor",
    ":semanticCommitScopeDisabled",
    ":timezone(Asia/Tokyo)"
  ],
  "platformAutomerge": true,
  "schedule": [
    "after 5:00 before 10:00"
  ],
  "ignorePaths": [
    "**/node_modules/**"
  ]
}
